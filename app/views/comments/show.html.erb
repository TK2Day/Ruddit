<h1> <%= @link.title %> </h1>

<%= form_tag(comments_show_path(@link), method: :post) do %>

  <div>
    <%= label_tag(:content, "Enter your comment: ") %>
    <br/>
    <%= text_area_tag(:content, nil, rows: 15, cols: 25) %>
  </div>

  <%= submit_tag("Submit Comment") %>
<% end %>

<% @link.comments.each do |c| %>
  <li><%= c.content %></li>
<% end %>
